{
    "manifest_version": 2,

    "name": "金数据提醒",
    "description": "自动获取金数据系统提醒，包括新数据、表单分享、模板审核等。点击以开启/关闭。",
    "version": "1.0",

    "icons": {
        "128": "images/icon38.png"
    },

    "permissions": [
        "https://jinshuju.net/",
        "https://www.jinshuju.net/",
        "http://localhost:3000/",
        "storage",
        "notifications"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },

    "background": {
        "scripts": ["backgroundPage.js"]
    },
    "web_accessible_resources": [
        "images/new_entry.png",
        "images/message.png"
    ]
}